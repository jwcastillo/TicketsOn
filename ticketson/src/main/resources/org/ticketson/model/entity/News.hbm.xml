<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.ticketson.model.entity.News" table="NEWS">
        <id column="ID" name="id" unsaved-value="0">
            <generator class="increment"/>
        </id>
        <property column="SUBJECT" name="subject" not-null="true"/>
        <property column="BODY" name="body" not-null="true"/>        
        <property column="AUTHOR" name="author" not-null="true"/>
        <property column="DATE" name="date" not-null="true"/>            
    </class>
</hibernate-mapping>





	
