<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
	"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
 
	<form-beans>
		 <form-bean name="userForm" type="org.ticketson.view.form.UserForm" />	
		 <form-bean name="userLoginForm" type="org.ticketson.view.form.UserLoginForm" />
		 <form-bean name="addNewsForm" type="org.ticketson.view.form.AddNewsForm" />	
		 		
	</form-beans>

	<global-forwards>
        <forward name="homePage" path="/homePage.do"/>
    </global-forwards>
	
	<action-mappings>

	 	<action
			path="/homePage"
			type="org.apache.struts.actions.ForwardAction"
			parameter="/index.jsp" />
			
		<action
			path="/addUserPage"
			type="org.apache.struts.actions.ForwardAction"
			parameter="/pages/addUser.jsp" />

		<action
			path="/addUser"
			type="org.springframework.web.struts.DelegatingActionProxy"
			name="userForm"
			parameter="method"
			validate="false">
 
			<forward name="success" path="/pages/success.jsp" />
			<forward name="error" path="/pages/addUser.jsp" />
		</action>
		
		<action
			path="/addNews"
			type="org.springframework.web.struts.DelegatingActionProxy"
			name="addNewsForm"
			parameter="method"
			validate="false">
 
			<forward name="success" path="/showNews.do?method=showNews" />
			<forward name="error" path="/pages/addNews.jsp" />
		</action>
		
		<action
			path="/showNews"
			type="org.springframework.web.struts.DelegatingActionProxy"
			name="addNewsForm"
			parameter="method"
			validate="false">
 
			<forward name="success" path="/pages/showNews.jsp" />
			<forward name="error" path="/pages/addNews.jsp" />
		</action>
		
		<action
			path="/showAddNews"
			type="org.apache.struts.actions.ForwardAction"
			parameter="/pages/addNews.jsp" />
		
		<action
			path="/showLoginPage"
			type="org.apache.struts.actions.ForwardAction"
			parameter="/pages/login.jsp" />
			
		<action
			path="/login"
			type="org.springframework.web.struts.DelegatingActionProxy"
			name="userLoginForm"
			parameter="method"
			validate="false"
			scope="request">
 
			<forward name="success" path="/pages/successLogin.jsp" />
			<forward name="error" path="/pages/login.jsp" />
		</action>
		
		<action
			path="/logout"
			type="org.springframework.web.struts.DelegatingActionProxy"
			parameter="method"
			validate="false"
			scope="request">
 
			<forward name="success" path="/index.jsp" />
		</action>
	</action-mappings>
 
	<message-resources parameter="org.ticketson.properties.Message" />
 
 	<!-- Spring Struts plugin -->
 	<plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
		<set-property property="contextConfigLocation" value="/WEB-INF/classes/applicationContext.xml" />
  	</plug-in>
 
</struts-config>